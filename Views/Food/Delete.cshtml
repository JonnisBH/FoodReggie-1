@model Food

<div class="tw-p-14">
    <h1 class="tw-font-bold tw-text-2xl">Delete Food Item</h1>
    <h2>Are you sure you want to delete this food item?</h2>
    <div>
        <dt>Food Id</dt>
        <dd>@Model.FoodId</dd>

        <dt>Food Group</dt>
        <dd>@Model.FoodGroup</dd>

        <dt>Calories</dt>
        <dd>@Model.Calories</dd>

        <dt>Protein</dt>
        <dd>@Model.Protein</dd>

        <dt>Carbohydrates</dt>
        <dd>@Model.Carbohydrates</dd>

        <dt>Fats</dt>
        <dd>@Model.Fats</dd>

        <dt>Image URL</dt>
        <dd>@Model.ImageURL</dd>
        
        <form asp-action="ConfirmDelete" asp-route-id="@Model.FoodId" method="post">
            <button type="submit" class="btn btn-danger btn-sm tw-rounded-lg">Delete</button>
            <a asp-action="Table">Cancel</a>
        </form>
    </div>
</div>